
  <%- include('../partials/admin') -%>

  
  <div class="l-main">
    <div class="account_top_information">
      <div class="account_overlay"></div>




      <!-- transaction wrapper start -->
      <div class="transaction_wrapper float_left">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="sv_heading_wraper half_section_headign half_sec_heading">
                <h4> Our</h4>
                <h3> Referral Account</h3>

              </div>
              <div class="x_offer_tabs_wrapper">
                <ul class="nav nav-tabs">
                  <li class="nav-item">
                    <a  href="/addPayment" class="nav-link active" data-toggle="tab"> deposits</a>
                  </li>
                  <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="/">withdraw</a>
                  </li>

                </ul>
              </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12">
              <div class="tab-content">
                <div id="home" class="tab-pane active">
                  <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                      <div class="table_next_race league_table overflow-scroll">
                        <table>
                          <tr>
                            <th class="form_table_resp">User</th>
                            <th>ReferralName</th>
                            <th>InvestmentPlan</th>
                            <th>InvestmentAmount</th>
                            <th>ReferralBonus</th>
                            <th>User Account</th>

                          </tr>




                          <% users.forEach((user)=>{ %>
                            <tr>

                              <td>
                                <%= user.username %>
                              </td>
                              <td>
                                <%= user.referralName %>
                              </td>
                              <td>
                                <%= user.plan %>
                              </td>
                              <td>
                                <%= user.amount %>
                              </td>
                              <td>
                                <%= user.bonus %>
                              </td>
                              <td>
                                <a class="btn btn-warning" href="/user/<%= user.id %>">See User</a>
                              </td>
                            </tr>

                            <% }) %>
                        </table>
                        

                       

                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  

