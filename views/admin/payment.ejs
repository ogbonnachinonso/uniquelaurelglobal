        <!-- transaction wrapper start -->
        <div class="transaction_wrapper float_left">
          <div class="container">
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="sv_heading_wraper half_section_headign half_sec_heading">
                  <h4>Here are our</h4>
                  <h3> Payments</h3>

                </div>
                <div class="x_offer_tabs_wrapper">
                  <ul class="nav nav-tabs">
                    <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="/addPayment"> deposits</a>
                    </li>
                    <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#menu2">withdraw</a>
                    </li>

                  </ul>
                </div>
              </div>
              <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="tab-content">
                  <div id="home" class="tab-pane active">
                    <div class="row">
                      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="table_next_race league_table overflow-scroll">
                          <table>
                            <tr>
                              <th class="form_table_resp">Image</th>
                              <th>Username</th>
                              <th>Plan</th>
                              <th>Description</th>
                              <th>Date</th>
                              <th>Update</th>
                            </tr>

                            <% payments.forEach((payment)=>{ %>
                              <tr>

                                <td class="work-box">
                                  <a href="<%= payment.imgUrl %>" data-gall="portfolioGallery" class="venobox">
                                    <div class="work-img">

                                        <img src="<%= payment.imgUrl %>" alt="card-img" class="card-img img-fluid" />
                                    </div>
                                  </a>
                    <td><%= payment.name %></td>
                    <td><%= payment.plan %></td>
                    <td><%= payment.description %></td>
                    <td><%= payment.createdAt.toLocaleDateString() %></td>
                    <td><a class="btn btn-warning" href="/editPayment/<%= payment.id %>">Edit</a>
                    <form style="display: inline;" action="/deletePayment"method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                    </form>
                    </td>
                      </tr>

                              <% }) %>
                          </table>

                        </table>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
